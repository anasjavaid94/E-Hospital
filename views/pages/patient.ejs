    <div class="container">
        <div class="title">Patients Registration From</div>
        <div class="content">
            <form action="/get_patientInfo" method="post">
                <div class="user-details">
                    <div class="input-box">
                        <span class="details">Frist Name</span>
                        <input name="Fname" type="text" id="Fname" value="" placeholder="Enter your name" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Middle Name</span>
                        <input name="Mname" type="text" id="MName" placeholder="Enter your Middle Name" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Last Name</span>
                        <input name="LName" type="text" id="LName" placeholder="Enter Last Name" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Gender</span>
                        <input name="gender" type="text" id="gender" placeholder="Male or Female" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Age</span>
                        <input name="Age" type="text" id="Age" placeholder="Enter your age" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Blood Group</span>
                        <input name="bloodGroup" type="text" id="bloodGroup" placeholder="Enter your password" required>
                    </div>

                    <div class="input-box">
                        <span class="details">Mobile Number</span>
                        <input name="number" type="text" id="number" placeholder="Enter Your Mobile Number">
                    </div>
                    <div class="input-box">
                        <span class="details">Email Id</span>
                        <input name="EmailId" type="text" id="EmailId" placeholder="Enter Your Email ID" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Address</span>
                        <input name="Address" type="text" id="Address" placeholder="Your Address" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Location</span>
                        <input name="Location" type="text" id="Location" placeholder="Your Address" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Postal Code</span>
                        <input name="PostalCode" type="text" id="PostalCode" placeholder="Your Postal Code" required>
                    </div>
                    <div class="input-box">
                        <span class="details">City</span>
                        <input name="City" type="text" id="city" placeholder="Your City" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Province</span>
                        <input name="province" type="text" id="province" placeholder="Your Province" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Health Card Number</span>
                        <input name="H_CardNo" type="text" id="H_CardNo" placeholder="Enter Health Card Number" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Passport Number</span>
                        <input name="PassportNo" type="text" id="PassportNo" placeholder="Enter Passport Number" required>
                    </div>
                    <div class="input-box">
                        <span class="details">PR Number</span>
                        <input name="PRNo" type="text" id="PRNo" placeholder="Enter PR Number" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Driving License Number</span>
                        <input name="DLNo" type="text" id="DLNo" placeholder="Driving License Number" required>
                    </div>
                </div>
                
                <div class="button">
                    <input name="" type="submit" value="Register">
                </div>
            </form>
        </div>
